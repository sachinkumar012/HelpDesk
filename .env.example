# Environment Variables Template
# Copy this file to .env for local development
# For Vercel deployment, set these in Vercel Dashboard

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/helpdesk
# For production: mongodb+srv://username:password@cluster.mongodb.net/helpdesk

# JWT Configuration (Change this in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-32-chars-min
JWT_EXPIRE=7d

# Client API URL (for React app)
REACT_APP_API_URL=http://localhost:5000/api
# For production: https://your-app-name.vercel.app/api

# Client URL for CORS
CLIENT_URL=http://localhost:3000

# Email Configuration (Optional - for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-email-password

# File Upload Configuration
MAX_FILE_SIZE=10485760